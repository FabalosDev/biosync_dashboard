{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "types": ["vite/client", "node"]
  },
  "files": [],
  "include": ["next-env.d.ts", "src/**/*", "**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "vite.config.ts"     // <- keep Vite config out of TS program
  ]
}